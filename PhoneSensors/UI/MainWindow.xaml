<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PhoneSensors" xmlns:ui="clr-namespace:PhoneSensors.UI"
        x:Class="PhoneSensors.UI.MainWindow"
        Title="Phone Sensors" Height="350" Width="525">
    <StackPanel>
        <Label HorizontalAlignment="Center">Acceleration</Label>
        <ui:VectorControl x:Name="AccelerationVectorControl" Multiply="20"/>

        <Label HorizontalAlignment="Center">Gyroscope</Label>
        <ui:VectorControl x:Name="GyroscopeVectorControl" Multiply="5"/>
    </StackPanel>
</Window>
